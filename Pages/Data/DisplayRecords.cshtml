@page
@model CVProject.Pages.Data.DisplayRecordsModel
@{
	
}
<table class="table table-bordered">
	<tr>
		<td></td>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Gender</th>
		<th>Grade</th>
		<th>Action</th>
	</tr>
	@foreach(var item in @Model.list){
		<tr>
			@{
				string image = item.FName + "_" + item.CVId + "." + item.ProfilePicture.Split(".")[1];
			}
			<td><img src = "~/images/@image" style="width:60px;"/></td>
		<td>@item.FName</td>
		<td>@item.LName</td>
		<td>@item.Email</td>
		<td>@item.Gender</td>
		<td>@item.Mark</td>
		<td>
			<a class="btn btn-primary" asp-page="ViewCV" asp-route-id="@item.CVId">View</a>
			<a class="btn btn-success" asp-page="UpdateCV" asp-route-id="@item.CVId">Update</a>
			<a class="btn btn-danger" asp-page="DeleteCV" asp-route-id="@item.CVId">Delete</a>

		</td>
	</tr>
	}
</table>